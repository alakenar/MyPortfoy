<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/view_logo"
        android:layout_width="364dp"
        android:layout_height="202dp"
        android:background="@drawable/homepage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/knotlar_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/view_tasarim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/kisisel_notlar" />

    <ImageButton
        android:id="@+id/mlisetesi_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/view_tasarim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/knotlar_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/musteri_listesi" />

    <ImageButton
        android:id="@+id/tliste_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/view_tasarim"
        app:layout_constraintBottom_toTopOf="@+id/knotlar_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_logo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tarihsel_liste" />

    <ImageButton
        android:id="@+id/yenikayit_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/view_tasarim"
        app:layout_constraintBottom_toTopOf="@+id/mlisetesi_button"
        app:layout_constraintEnd_toStartOf="@+id/tliste_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_logo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/yeni_kayit" />

    <ImageView
        android:id="@+id/myportfoy_logo"
        android:layout_width="187dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_logo"
        app:layout_constraintEnd_toEndOf="@+id/view_logo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/view_logo"
        app:layout_constraintTop_toTopOf="@+id/view_logo"
        app:layout_constraintVertical_bias="0.325"
        app:srcCompat="@drawable/myportfoy_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>